@model CentroEmpWeb.Models.DTOs.VMEmprendedor
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Registrarse - Centro</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    
    <!-- SB Admin CSS -->
    <link href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin@7.0.7/css/sb-admin.min.css" rel="stylesheet">
    
    <!-- CSS personalizado -->
    <link href="~/css/custom.css" rel="stylesheet" />
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Crear Cuenta</h3>
                                </div>
                                <div class="card-body">
                                    @if (ViewBag.Creado == null)
                                    {
                                        <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input asp-for="DocumentoIdentidad" class="form-control" placeholder="Nro. Documento" />
                                                        <label asp-for="DocumentoIdentidad">Nro. Documento</label>
                                                        <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input asp-for="Nombre" class="form-control" placeholder="Nombres" />
                                                        <label asp-for="Nombre">Nombres</label>
                                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input asp-for="Apellido" class="form-control" placeholder="Apellidos" />
                                                        <label asp-for="Apellido">Apellidos</label>
                                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input asp-for="Correo" class="form-control" type="email" placeholder="Correo" />
                                                        <label asp-for="Correo">Correo</label>
                                                        <span asp-validation-for="Correo" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input asp-for="Clave" class="form-control" type="password" placeholder="Contraseña" />
                                                        <label asp-for="Clave">Contraseña</label>
                                                        <span asp-validation-for="Clave" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input asp-for="ConfirmarClave" class="form-control" type="password" placeholder="Confirmar Contraseña" />
                                                        <label asp-for="ConfirmarClave">Confirmar Contraseña</label>
                                                        <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            @if (ViewBag.Mensaje != null)
                                            {
                                                <div class="alert alert-danger">
                                                    @ViewBag.Mensaje
                                                </div>
                                            }

                                            <div class="mt-4 mb-0">
                                                <div class="d-grid">
                                                    <button class="btn btn-primary btn-block" type="submit">Crear Cuenta</button>
                                                </div>
                                            </div>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="alert alert-success">
                                            <p>@ViewBag.Mensaje</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">
                                        <a asp-controller="Acceso" asp-action="Login">¿Ya tienes una cuenta? Acceder</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Tu Sitio 2023</div>
                        <div>
                            <a href="#">Política de Privacidad</a>
                            &middot;
                            <a href="#">Términos y Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts de validación -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
